<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/part_conf_each_participants_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10sp"
    android:layout_marginBottom="10sp"
    android:gravity="center">

    <!-- 프로필 사진 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/part_conf_each_participants_ProfileImgCardView"
        android:layout_width="40sp"
        android:layout_height="40sp"
        app:cardBackgroundColor="@color/blue_002"
        app:cardCornerRadius="15sp">

        <ImageView
            android:id="@+id/part_conf_each_participants_ProfileImg"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:clickable="true"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/part_conf_each_participants_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        android:text="홍길동(호스트, 나)"
        android:textSize="17sp"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingHorizontal="15sp">
        <ImageView
            android:id="@+id/part_conf_each_participants_mic_btn"
            android:layout_width="28sp"
            android:layout_height="28sp"
            android:layout_marginEnd="5sp"
            android:src="@drawable/ic_mic_on" />
        <ImageView
            android:id="@+id/part_conf_each_participants_video_btn"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:src="@drawable/ic_video_on" />
    </LinearLayout>
</LinearLayout>
