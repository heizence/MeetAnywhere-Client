<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/part_each_host_candidate_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10sp"
    android:background="@drawable/style_conference_exit_btn"
    android:clickable="true"
    android:gravity="center"
    android:padding="5sp">

    <!-- 프로필 사진 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/part_each_host_candidate_ProfileImgCardView"
        android:layout_width="40sp"
        android:layout_height="40sp"
        app:cardBackgroundColor="@color/blue_002"
        app:cardCornerRadius="15sp">

        <ImageView
            android:id="@+id/part_each_host_candidate_ProfileImg"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/part_each_host_candidate_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        android:text="홍길동(호스트, 나)"
        android:textSize="17sp"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/part_each_host_candidate_checkImg"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_check"/>
</LinearLayout>
